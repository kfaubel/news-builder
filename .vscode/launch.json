    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug App",
             "preLaunchTask": "npm: build",
            "program": "${workspaceFolder}/app.js",
            "cwd" : "${workspaceFolder}",
            "protocol": "inspector",
            "args": ["--debug", "--source", "engadget", "--count", "10", "--key", "test", "oudir1"],
            "outFiles": [
                "${workspaceFolder}/build/**/*.js"
            ]
        }
    ]
